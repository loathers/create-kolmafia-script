{
  "name": "create-kolmafia-script",
  "description": "Create a kolmafia script with ease",
  "version": "0.0.17",
  "author": "Sam Gaus <sam@gaus.co.uk>",
  "scripts": {
    "build": "tsx src/cli.ts --minify",
    "clean": "shx rm -rf lib",
    "dev": "tsx src/cli.ts --watch",
    "prepublishOnly": "npm run clean && npm run build",
    "format": "prettier --write src/**/*.ts ./*.json"
  },
  "type": "module",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "templates"
  ],
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/yargs-interactive": "^2.1.6",
    "prettier": "^3.3.3",
    "shx": "^0.3.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "create-create-app": "^7.3.0",
    "yargs-interactive": "^3.0.1"
  },
  "packageManager": "yarn@4.4.1"
}
